\section*{Exercise 2}

\begin{algorithm}
    \caption{\begin{otherlanguage}{greek}Βρες την Ειδική Κορυφή\end{otherlanguage}}
    \begin{algorithmic}[1]
        \State \textbf{\begin{otherlanguage}{greek}Είσοδος\end{otherlanguage}}: \begin{otherlanguage}{greek} Κατευθυνόμενο γράφημα $G = (V, A)$ με $|V| = n$.\end{otherlanguage}
        \State \textbf{\begin{otherlanguage}{greek}Έξοδος \end{otherlanguage}}: \texttt{TRUE} \begin{otherlanguage}{greek} αν υπάρχει κορυφή $v$ με \end{otherlanguage} out-degree = 0 \begin{otherlanguage}{greek} και \end{otherlanguage} in-degree = $n-1$, \begin{otherlanguage}{greek} αλλιώς \end{otherlanguage} \texttt{FALSE}.
        
        \State \textbf{\begin{otherlanguage}{greek}Αρχικοποίηση \end{otherlanguage}}: \begin{otherlanguage}{greek} Δημιούργησε έναν πίνακα \end{otherlanguage} \texttt{in\_degree}[1...n] \begin{otherlanguage}{greek} με αρχική τιμή 0 και έναν \end{otherlanguage} rejected[1...n] \begin{otherlanguage}{greek} με αρχική τιμή 0.
        \State Θέσε \end{otherlanguage} \texttt{node} := 1 (\begin{otherlanguage}{greek} υποψήφια κορυφή). \end{otherlanguage}
        
        \For{\begin{otherlanguage}{greek} κάθε ακμή $(u, v)$ στο $A$ \textbf{και} \end{otherlanguage} rejected[v] = 0 }
            \Comment{\begin{otherlanguage}{greek} Κοιτάμε μόνο τα \end{otherlanguage} nodes \begin{otherlanguage}{greek} που έχουμε δεί ότι έχουν \end{otherlanguage} out-degree $<$ 0}
            \State \texttt{in\_degree}[v] $\gets$ \texttt{in\_degree}[v] + 1
            \State \texttt{rejected}[u] $\gets$ 1
            \If{\texttt{node} $= u$}
                \State \texttt{node} $\gets v$ \Comment{\begin{otherlanguage}{greek} Αποκλείουμε το \end{otherlanguage} candidate node \begin{otherlanguage}{greek} αν έχει \end{otherlanguage} out-degree $>$ 0}
            \EndIf
        \EndFor
        
        \State \textbf{\begin{otherlanguage}{greek} Έλεγχος εγκυρότητας υποψήφιας κορυφής \end{otherlanguage}}:
        \If{\texttt{in\_degree}[node] = $n-1$}
            \State \Return \texttt{TRUE}
        \Else
            \State \Return \texttt{FALSE}
        \EndIf
    \end{algorithmic}
\end{algorithm}



\section*{Exercise 4}

\begin{algorithm}
\caption{\begin{otherlanguage}{greek}Χρωματισμός Διαστημάτων με Ελάχιστα Χρώματα\end{otherlanguage}}
\begin{algorithmic}[1] 
\State \begin{otherlanguage}{greek} Είσοδος $Set = \{(l_i, r_i)\}_{i=1}^n$ από $n$ ανοιχτά διαστήματα και ο αριθμός των διαστημάτων $n$.\end{otherlanguage}
\State \begin{otherlanguage}{greek} Επιστρέφει ένα πίνακα $ColourArray[1 \ldots n]$ όπου $n$ τα διαστήματα και τιμές του το κάθε χρώμα(τα χρώματα θα συμβολίζονται με αριθμούς).\end{otherlanguage}
\State  \begin{otherlanguage}{greek} Αρχικοποίησε τον πίνακα $IntervalArray$ και ταξινόμησε το σύνολο ως προς το αριστερό άκρο του κάθε διαστήματος στον πίνακα κρατώντας ως τιμές του τα 2 άκρα.\end{otherlanguage}
\State \begin{otherlanguage}{greek} Αρχικοποίησε $ColourArray$ για $n$ θέσεις με τιμές 0.\end{otherlanguage}
\State \begin{otherlanguage}{greek} Αρχικοποίησε $CurrentColour \gets 1$.\end{otherlanguage}
\For{$i \gets 1$ \textbf{\begin{otherlanguage}{greek} μέχρι \end{otherlanguage}} $n$}
    \State $CurrentColour \gets 1$
    \For{$j \gets 1  \textbf{\begin{otherlanguage}{greek}μέχρι\end{otherlanguage}} $i}
        \If{$( IntervalArray[j].secondElement > IntervalArray[i].firstElement \textbf{ and } CurrentColour = ColourArray[j] )$}
            \State $ColourArray[i] \gets CurrentColour$
            \State \begin{otherlanguage}{greek} Βγες από την επανάληψη. \end{otherlanguage}
        \Else
            \State CurrentColour = CurrentColour + 1
        \EndIf
    \EndFor
    \If{$( ColourArray[i] = 0 )$}
        \State $ColourArray \gets CurrentColour$
    \EndIf
\EndFor
\State \textbf{\begin{otherlanguage}{greek} Επιστροφή \end{otherlanguage}} \begin{otherlanguage}{greek} Ο πίνακας $ColourArray[1 \ldots n]$.\end{otherlanguage}

\end{algorithmic}
\end{algorithm}




